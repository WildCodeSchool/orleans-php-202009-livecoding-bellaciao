{% extends 'layout.html.twig' %}

{% block title %}Admin | Ajout Jeu{% endblock %}
{% block stylesheet %}

{% endblock %}

{% block header %}
    <header>
        <div class="title">
            <h1>Ajouter un jeu</h1>
        </div>
    </header>

{% endblock %}

{% block content %}
    <main class="container">

        <ul class="mt-3 alert alert-danger">
            {%- for error in errors if error -%}
                <li>{{ error }}</li>
            {%- endfor -%}
        </ul>

        <form action="" method="POST" class="mt-5" novalidate>
            <div class="form-group">
                <label for="name">Nom du jeu</label>
                <input class="form-control" type="text" id="name" name="name" value="{{ game.name }}">
            </div>

            <div class="form-group">
                <label for="price">Prix (optionnel)</label>
                <input class="form-control" type="number" step="0.01" min="0" id="price" name="price"  value="{{ game.price }}">
            </div>

            <div class="form-group">
                <label for="player_number">Nombre de joueurs (optionnel)</label>
                <input class="form-control" type="number" min="0" id="player_number" name="player_number" value="{{ game.player_number }}">
            </div>

            <div class="form-group">
                <label for="image">Image (optionnel)</label>
                <input placeholder="http://monimage.com" class="form-control" type="url" min="0" id="image" name="image" value="{{ game.image }}">
            </div>

            <div class="form-group">
                <label for="description">Description (optionnel)</label>
                <textarea class="form-control" id="description" name="description">{{ game.description }}</textarea>
            </div>

            <div class="form-group">
                <label for="category">Cat√©gorie</label>
                <select name="category" id="category">
                    {% for category in categories %}
                        <option {{ game.category == category.id ? 'selected' }} value="{{ category.id }}">{{ category.name }}</option>
                    {% endfor %}
                </select>
            </div>


            <div class="form-group">
                <button class="btn btn-success btn-lg">Ajouter</button>
            </div>

        </form>
    </main>
{% endblock %}
