{% extends 'layout.html.twig' %}

{% block title %}Admin | Jeux{% endblock %}
{% block stylesheet %}

{% endblock %}

{% block header %}
    <header>
        <div class="title">
            <h1>Administrer les jeux</h1>
        </div>
    </header>

{% endblock %}

{% block content %}
<main class="container">
    <div class="row mt-2">
        <a href="/adminGame/add" class="btn btn-secondary">Ajouter un jeu</a>
    </div>
    <table class="table table-hover mt-lg-5 mt-1">
        <thead class="thead-dark">
        <tr>
            <th>Nom</th>
            <th>Prix</th>
        </tr>
        </thead>
        <tbody>
        {% for game in games %}
            <tr>
                <td>{{ game.name }}</td>
                <td>{{ game.price }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</main>
{% endblock %}
