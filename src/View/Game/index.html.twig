{% extends 'layout.html.twig' %}

{% block title %}{{ parent() }} | Nos jeux{% endblock %}
{% block stylesheet %}
    <link rel="stylesheet" href="assets/css/game.css">
{% endblock %}

{% block header %}
    <header>
        <div class="title">
            <h1>Nos jeux</h1>
        </div>
    </header>

{% endblock %}

{% block content %}
    <main class="container">
        <div class="row my-5">
            {% for game in games %}
                <div class="col-sm-6 col-md-4 col-lg-3">
                    <div class="card">
                        <img src="{{ game.image }}"  class="card-img-top"  alt=""/>
                        <div class="card-body">
                            <h2 class="card-title">{{ game.name }}</h2>
                            <div class="badge badge-pill badge-secondary">{{ game.category }}</div>
                            <p class="card-text price">{{ game.price ?? '0' }}€</p>
                            <a href="/game/show/{{ game.id }}" class="btn btn-light">Détail du jeu</a>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </main>
{% endblock %}
