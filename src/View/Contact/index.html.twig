{% extends 'layout.html.twig' %}

{% block title %}{{ parent() }} | Contact{% endblock %}
{% block stylesheet %}
    <link rel="stylesheet" href="assets/css/contact.css">
{% endblock %}

{% block header %}
    <header>
        <div class="title">
            <h1>Contact</h1>
        </div>
    </header>

{% endblock %}

{% block content %}
    <main class="container mt-5">
        <ul class="alert alert-danger">
            {%- for error in errors -%}
                <li>{{- error -}}</li>
            {%- endfor -%}
        </ul>

        <form action="" method="post" novalidate>
            <div class="form-group"><label for="name">Nom</label>
                <input class="form-control" type="text" name="name" id="name" value="{{ contact.name }}">
            </div>
            <div class="form-group"><label for="email">Email</label>
                <input class="form-control" type="email" name="email" id="email" value="{{ contact.email }}">
            </div>
            <div class="form-group"><label for="message">Message</label>
                <textarea class="form-control" name="message" id="message">{{ contact.message }}</textarea>
            </div>
            <button class="btn btn-secondary">Envoyer</button>
        </form>
    </main>
{% endblock %}
